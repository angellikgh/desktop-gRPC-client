{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "stories"],
}
